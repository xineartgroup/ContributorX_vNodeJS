    <div class="detail-ui content">
        <form action="/contribution/delete/<%= contribution._id %>" method="POST">
            <h2>Delete Contribution</h2>
            <p>Are you sure you want to delete the contribution "<strong><%= contribution.Name %></strong>"?</p>
