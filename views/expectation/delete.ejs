<body>
    <%- include('../partials/nav.ejs') %>

    <div class="detail-ui content">
        <form action="/expectation/delete/<%= expectation._id %>" method="POST">
            <h2>Delete Expectation</h2>
            <p>Are you sure you want to delete this expectation for <strong><%= expectation.Contribution.Name %></strong>?</p>
            <p>This action cannot be undone.</p>

            <div class="form-buttons">
                <button type="submit" class="btn-danger">Delete</button>
                <a href="/expectation" class="cancel-button">Cancel</a>
            </div>
        </form>
    </div>
</body>
