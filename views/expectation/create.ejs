<%- include('../partials/header.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>

    <div class="detail-ui content">
        <h2>New Expectation</h2>
        <form action="/expectation" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Contributor">Contributor:</label>
                <select id="Contributor" name="Contributor" required>
                    <% contributors.forEach(contributor => { %>
                        <option value="<%= contributor._id %>"><%= contributor.UserName %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="Contribution">Contribution:</label>
                <select id="Contribution" name="Contribution" required>
                    <% contributions.forEach(contribution => { %>
                        <option value="<%= contribution._id %>"><%= contribution.Name %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="AmountPaid">Amount Paid:</label>
                <input type="number" id="AmountPaid" name="AmountPaid" step="0.01" required>
            </div>

            <div class="form-group">
                <label for="AmountToApprove">Amount To Approve:</label>
                <input type="number" id="AmountToApprove" name="AmountToApprove" step="0.01" required>
            </div>

            <div class="form-group">
                <label for="PaymentStatus">Payment Status:</label>
                <select id="PaymentStatus" name="PaymentStatus" required>
                    <option value="0">Pending</option>
                    <option value="1">Processing</option>
                    <option value="2">Cleared</option>
                </select>
            </div>

            <div class="form-group">
                <label for="PaymentReciept">Upload Receipt:</label>
                <input type="file" id="PaymentReciept" name="PaymentReciept">
            </div>

            <div class="form-buttons">
                <button type="submit">Create</button>
                <a href="/expectation" class="cancel-button">Cancel</a>
            </div>
        </form>
    </div>
</body>
<%- include('../partials/footer.ejs') %>
